<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:taboola="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp"
    android:background="#ffffff">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sponsored Content"
        android:textSize="12sp"
        android:textColor="#888888"
        android:layout_marginBottom="8dp" />

    <FrameLayout
        android:id="@+id/taboola_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="200dp">

        <com.taboola.android.TBLClassicUnit
            android:id="@+id/taboola_unit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            taboola:tb_mode="alternating-widget-without-video 1x1"
            taboola:tb_placement="Mid Article"
            taboola:tb_target_type="mix" />

    </FrameLayout>

</LinearLayout>